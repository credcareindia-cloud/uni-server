# Production Environment Configuration for AWS Fargate
NODE_ENV=production

# Database
DATABASE_URL=postgresql://username:password@your-rds-endpoint:5432/uniqube_prod

# JWT Secret (use AWS Secrets Manager in production)
JWT_SECRET=your-production-jwt-secret

# File Upload Configuration - Optimized for Large IFC Files
MAX_FILE_SIZE_MB=5120
FILE_UPLOAD_TMP_DIR=/tmp
UPLOAD_TIMEOUT_MS=300000

# Background Processing - Optimized for Fargate
BACKGROUND_WORKERS=4
WORKER_MEMORY_LIMIT_MB=12288
WORKER_TIMEOUT_MS=1800000

# Storage Configuration
STORAGE_TYPE=s3
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket-name

# Memory and Performance Optimization
NODE_OPTIONS=--max-old-space-size=14336 --expose-gc

# Logging
LOG_LEVEL=info

# Health Check
HEALTH_CHECK_TIMEOUT=30000

# CORS (adjust for your frontend domain)
CORS_ORIGIN=https://your-frontend-domain.com
